{
  "compilerOptions": {
    "esModuleInterop": false,
    "module": "commonjs",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "types": ["react", "node"],
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*", "custom.d.ts"]
}
